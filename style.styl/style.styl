body 
    margin 0
    padding 0

header 
    width 100%
    height: 100%
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;

    .wrapper
        max-width 1300px
        margin auto
        display flex
        align-items center 
        height 100%
        justify-content space-between
        padding 0 10px
        background-color white
        z-index 10
        position relative 


        &-logo
            width 50px
            height 50px

            img 
                width 100%
                height 100%
        
        &-hamburger
            width 50px
            height 50px
            display flex 
            flex-direction column
            justify-content space-between

            span 
                border 2px solid black

    nav 
        position absolute 
        left 50px
        transform translateX(-50%) translateY(-100px)
        z-index 1
        

